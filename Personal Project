    }

    void temperatureConverter() {
        // Here base unit is Celsius so all units are being converted to and from
        // Celsius
        double temperature;

        System.out.println("Welcome to the Temperature Converter!");
        System.out.println("Please select the unit from which you want to convert (1-3) : ");
        System.out.println("1. Celsius (C)");
        System.out.println("2. Fahrenheit (F)");
        System.out.println("3. Kelvin (K)");
        System.out.print("Enter your choice: ");
        int fromUnit = sc.nextInt();

        System.out.print("Enter the temperature: ");
        temperature = sc.nextDouble();

        switch (fromUnit) {
            case 1:
                // No conversion needed as base unit is celcius

                break;
            case 2:
                temperature = (temperature - 32) * 5 / 9;
                break;
            case 3:
                temperature -= 273.15;
                break;
            default:
                System.out.println("Invalid choice for unit.");
                System.out.println("Setting Celsius (C) as default");
                fromUnit = 1;
                break;
        }

        System.out.println("Please select the unit to which you want to convert (1-3) :");
        System.out.println("1. Celsius (C)");
        System.out.println("2. Fahrenheit (F)");
        System.out.println("3. Kelvin (K)");
        int toUnit = sc.nextInt();

        switch (toUnit) {
            case 1:
                // No conversion needed as base unit is celcius

                System.out.println(temperature + " C");
                break;
            case 2:
                temperature = temperature * 9 / 5 + 32;
                System.out.println(temperature + " F");
                break;
            case 3:
                temperature += 273.15;
                System.out.println(temperature + " K");
                break;
            default:
                System.out.println("Invalid choice for unit.");
                System.out.println("Setting Celsius (C) as default");
                // No conversion needed as base unit is celcius
                System.out.println(temperature + " C");
                break;
        }
    }

    void massConverter() {
        double mass;

        // Here base unit is kilograms so all units are being converted to and from
        // kilograms
        System.out.println("Welcome to the Mass Converter!");
        System.out.println("Please select the unit from which you want to convert (1-3) : ");
        System.out.println("1. Kilogram (kg)");
        System.out.println("2. Gram (g)");
        System.out.println("3. Pound (lb)");
        System.out.print("Enter your choice: ");
        int fromUnit = sc.nextInt();

        System.out.print("Enter the mass: ");
        mass = sc.nextDouble();

        switch (fromUnit) {
            case 1:
                // No conversion needed as base unit is kilograms
                break;
            case 2:
                mass /= 1000;
                break;
            case 3:
                mass *= 0.453592;
                break;
            default:
                System.out.println("Invalid choice for unit.");
                System.out.println("Setting Kilogram (kg) as default");
                fromUnit = 1;
                break;
        }

        System.out.println("Please select the unit to which you want to convert (1-3) :");
        System.out.println("1. Kilogram (kg)");
        System.out.println("2. Gram (g)");
        System.out.println("3. Pound (lb)");
        int toUnit = sc.nextInt();

        switch (toUnit) {
            case 1:
                // No conversion needed as base unit is kilograms
                System.out.println(mass + " kg");
                break;
            case 2:
                mass *= 1000;
                System.out.println(mass + " g");
                break;
            case 3:
                mass /= 0.453592;
                System.out.println(mass + " lb");
                break;
            default:
                System.out.println("Invalid choice for unit.");
                System.out.println("Setting Kilogram (kg) as default");
                System.out.println(mass + " kg");
                break;
        }

    }
}

class PolynomialS {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        Solution sol = new Solution();

        while (true) {
            System.out.println("---------------------------------------------");
            System.out.println("                MAIN MENU");
            System.out.println("---------------------------------------------");
            System.out.println("Press 1 to Enter Simple Calculator");
            System.out.println("Press 2 to Solve Quadratic Equation (degree = 2)");
            System.out.println("Press 3 to Solve Cubic Equation (degree = 3)");
            System.out.println("Press 4 to Solve Quartic equation (degree = 4)");
            System.out.println("Press 5 for Currency Conversion");
            System.out.println("Press 6 for Unit Conversion");
            System.out.println("Press 7 for Factorial");
            System.out.println("Press 8 for Power Function");
            System.out.println("Press 9 for Arithmetic Progression (Sum)");
            System.out.println("Press 10 for Geometric Progression (Product)");

            System.out.println("Press 0 to exit");

            System.out.print("Your choice: ");
            int polyChoice = sc.nextInt();
            System.out.println();
            System.out.println("---------------------------------------------");
            System.out.println();

            if (polyChoice == 0) {
                System.out.println("Exiting the program. Goodbye!");
                System.out.println();
                System.out.println("---------------------------------------------");
                System.exit(0);

                break;
            }

            switch (polyChoice) {

                case 1:
                    System.out.print("Enter an equation (num1 operator num2): ");
                    System.out.print("Enter num1 : ");
                    double num1 = sc.nextDouble();

                    System.out.print("Enter operator (+, -, *, /) : ");
                    char operator = sc.next().charAt(0);

                    System.out.print("Enter num2 : ");
                    double num2 = sc.nextDouble();

                    sol.simpleCalculator(num1, operator, num2);

                    break;

                case 2:
                    System.out.println("Equation: a * x^2 + b * x + c");
                    System.out.print("a = ");
                    int a2 = sc.nextInt();
                    System.out.print("b = ");
                    int b2 = sc.nextInt();
                    System.out.print("c = ");
                    int c2 = sc.nextInt();

                    sol.poly(a2, b2, c2);

                    break;

                case 3:

                    System.out.println("Equation: a * x^3 + b * x^2 + c * x + d");
                    System.out.print("a = ");
                    int a3 = sc.nextInt();
                    System.out.print("b = ");
                    int b3 = sc.nextInt();
                    System.out.print("c = ");
                    int c3 = sc.nextInt();
                    System.out.print("d = ");
                    int d3 = sc.nextInt();

                    sol.poly(a3, b3, c3, d3);

                    break;

                case 4:

                    System.out.println("Equation: a * x^4 + b * x^3 + c * x^2 + d * x + e");
                    System.out.print("a = ");
                    int a4 = sc.nextInt();
                    System.out.print("b = ");
                    int b4 = sc.nextInt();
                    System.out.print("c = ");
                    int c4 = sc.nextInt();
                    System.out.print("d = ");
                    int d4 = sc.nextInt();
                    System.out.print("e = ");
                    int e4 = sc.nextInt();

                    sol.poly(a4, b4, c4, d4, e4);

                    break;

                case 5:

                    sol.currencyConverter();

                    break;

                case 6:

                    System.out.println("Welcome to the Unit Converter!");
                    System.out.println("Please select the type of conversion:");
                    System.out.println("1. Length");
                    System.out.println("2. Area");
                    System.out.println("3. Temperature");
                    System.out.println("4. Mass");
                    System.out.print("Enter your choice: ");
                    int choice = sc.nextInt();

                    double inputValue;

                    switch (choice) {
                        case 1:
                            sol.lengthConverter();
                            break;
                        case 2:
                            sol.areaConverter();
                            break;
                        case 3:
                            sol.temperatureConverter();
                            break;
                        case 4:
                            sol.massConverter();
                            break;
                        default:
                            System.out.println("Invalid choice for conversion type.");
                            return;
                    }

                    break;

                case 7:

                    System.out.print("Enter a non-negative integer: ");
                    int input = sc.nextInt();
                    sol.Factorial(input);
                    break;

                case 8:

                    System.out.print("Enter the base: ");
                    double base = sc.nextDouble();

                    System.out.print("Enter the exponent: ");
                    int exponent = sc.nextInt();
                    System.out.println(Math.pow(base, exponent));

                    break;

                case 9:
                    System.out.print("Enter the first term (a): ");
                    int firstTerm = sc.nextInt();

                    System.out.print("Enter the common difference (d): ");
                    int commonDifference = sc.nextInt();

                    System.out.print("Enter the number of terms (n): ");
                    int numberOfTerms = sc.nextInt();
                    sol.APSum(firstTerm, commonDifference, numberOfTerms);

                    break;

                case 10:

                    System.out.print("Enter the first term (a): ");
                    double firstTermGP = sc.nextDouble();

                    System.out.print("Enter the common ratio (r): ");
                    double commonRatioGP = sc.nextDouble();

                    System.out.print("Enter the number of terms (n): ");
                    int numberOfTermsGP = sc.nextInt();

                    sol.GP(firstTermGP, commonRatioGP, numberOfTermsGP);

                    break;

                default:
                    System.out.println("Invalid choice. Please enter a valid option.");
            }
        }

        sc.close();
    }
}
